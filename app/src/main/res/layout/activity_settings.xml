    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/chat_background_linear"
        android:layout_below="@id/account_linear"
        android:layout_marginTop="@dimen/dimen_linear_top"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speech_bubble2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Background"
            android:textSize="18sp"
            android:id="@+id/bg"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/chat_background_linear"
        android:background="@color/colorView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/dimen_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/help_linear"
