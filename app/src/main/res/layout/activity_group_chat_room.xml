<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.palcechat.GroupChatRoom"
    android:background="@drawable/splatter">

    <include layout="@layout/main_app_bar" android:id="@+id/main_page_toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/l"
        android:id="@+id/message_swipe_layout"
        android:layout_below="@id/main_page_toolbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/main_page_toolbar">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="7dp"
        android:weightSum="10"
        android:id="@+id/l"
        android:background="@drawable/message_field"
        android:gravity="center">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/add"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/round_image_button"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/text_pane"
            android:hint="Type a message"
            android:textSize="17sp"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:imeOptions="actionGo"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/send"
            android:src="@drawable/ic_send_black_24dp"
            android:background="@drawable/round_image_button"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
