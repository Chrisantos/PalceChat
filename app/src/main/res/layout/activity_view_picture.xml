<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrisantuseze.palcechat.ViewPicture"
    android:background="@color/milk">

    <include layout="@layout/view_picture_app_bar" android:id="@+id/view_page_toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_pic"
        android:src="@drawable/user_avatar1"
        android:layout_centerInParent="true"
        android:layout_below="@id/view_page_toolbar"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:visibility="invisible"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        app:indicatorColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_page_toolbar"
        android:layout_marginTop="20dp"/>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_page_toolbar"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
